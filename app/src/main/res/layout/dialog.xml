<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content"
              android:orientation="vertical">

    <CheckBox
            android:text="Solutions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/checkedTextView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="8dp"
            android:checked="true"/>

    <CheckBox
            android:text="Problems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/checkedTextView1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="8dp"
            android:checked="true"/>

    <CheckBox
            android:text="Organization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/checkedTextView2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="8dp"
            android:checked="true"/>

    <CheckBox
            android:text="Users alerts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/checkedTextView3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="8dp"
            android:checked="true"/>

    <CheckBox
            android:text="Fire prevention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/checkedTextView4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="8dp"
            android:checked="true"/>
</LinearLayout>
